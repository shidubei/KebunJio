<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A803D"
    tools:context=".features.reminders.ReminderActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:text="Reminder"
        android:textStyle="bold"
        android:textSize="30sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/plantName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Plant Name"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/viewPlantDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="Back to ViewPlantDetailsActivity"
        android:padding="10dp"
        android:background="#0A803D"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plantName"
        />

    <TextView
        android:id="@+id/selectTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder for"
        android:textSize="18sp"
        android:gravity="end"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/viewPlantDetailsButton"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <Spinner
        android:id="@+id/reminderType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/selectTypeLabel"
        app:layout_constraintStart_toEndOf="@id/selectTypeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/reminderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Notification time"
        android:textSize="18sp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/selectTypeLabel"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <TextView
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="18sp"
        android:gravity="start"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/reminderTime"
        app:layout_constraintStart_toEndOf="@id/reminderTime"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/selectFrequencyLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Frequency"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/timeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/reminderFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/selectFrequencyLabel"
        app:layout_constraintBottom_toTopOf="@id/confirmButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <NumberPicker
            android:id="@+id/frequencyNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <!-- Interval Spinner (Days/Weeks/Months) -->
        <Spinner
            android:id="@+id/frequencyIntervalPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/reminderFrequency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
